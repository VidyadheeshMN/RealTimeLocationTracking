<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.realtimelocationtracking"
    tools:ignore="GoogleAppIndexingWarning">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/location_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBwBiCnr1IJXA3dKpOp77ogzwoD3B7gpW0" />
        <activity android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrackingActivity"
            android:label="@string/title_activity_tracking"></activity>
        <activity android:name=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".FriendRequestActivity" />
        <activity android:name=".AllPeopleActivity" />
        <service android:name=".Service.MyFCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <receiver android:name=".Service.MyLocationReciever"/>
    </application>
</manifest>